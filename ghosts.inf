! game-specific grammar starts here
Verb 'call' * -> Call
            * noun -> Call
            * special -> Call;

Extend 'go' * 'to' noun -> Go;

Extend 'push' * noun 'in' 'order' special -> PushInOrder
              * noun 'in' 'order' -> PushOrderError;

Verb 'extinguish' * noun -> SwitchOff;

Verb 'ring' = 'call';
Verb 'dial' = 'call';
Verb 'play' = 'switch';
Verb 'hear' = 'listen';
Verb 'taste' = 'eat';

end;
