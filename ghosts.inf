Object -> gravestone "gravestone",
  with parse_name [w n a len;
          n = wn;
          w = NextWord();
            if (w == 'gravestone') {
              a = WordAddress(n);
              len = WordLength(n);
              if (len == 10 && a->9 == 'e')
              return 1;
            }
            if (w == 'grave') return 1;
            if (w == 'stone') return 1;
    ],
    describe [;
      print "^A gravestone looms ominously. It stands nameless, a foreboding presence in the pale light of the winter sun";
